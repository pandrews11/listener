<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Rooms</h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Owner</th>
          <th>Currently listening to</th>
          <th>Listeners</th>
        </tr>
      </thead>
      <tbody>
        <% Room.all.each do |r| %>
          <tr>
            <td><%= link_to r.name, room_path(r) %></td>
            <td><%= r.user.username %></td>
            <td></td>
            <td><%= r.listeners %></td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

